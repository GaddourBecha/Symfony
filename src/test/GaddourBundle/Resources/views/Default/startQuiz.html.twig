






{% extends "testGaddourBundle::layout.html.twig" %}

  {% block menu %}

      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <li><a href="{{ path('fos_user_profile_show')}}">Profile</a></li>
          <li><a href="{{ path('fos_user_profile_edit')}}">Edit Profile</a></li>
          <li><a href="{{ path('fos_user_profile_addQuiz')}}">Add Quiz</a></li>
          <li><a href="{{ path('test_gaddour_contact')}}">Contact</a></li>
          <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
      {% else %}

          <li><a href="{{ path('test_gaddour_homepage')}}">Home</a></li>
          <li><a href="{{ path('fos_user_registration_register')}}">Subscribe</a></li>
          <li class="active"><a href="{{ path('test_gaddour_etudiant')}}">Student</a></li>
          <li><a href="{{ path('test_gaddour_contact')}}">Contact</a></li>
          <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
      {% endif %}
  {% endblock %}



{% block fos_user_content %}



<table class="table table-striped">
        <thead>
        <tr scope="row">
            <th>#</th>
            <th>Quiz</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{{ quiz.id }}</td>
                <td>{{ quiz.contenuQuiz }}</td>
                <td>
                    <a href="/tryquiz/{{ quiz.id }}/{{ idEtudiant }}" class="btn btn-default">Try this Quiz</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  {% endblock fos_user_content %}